<div class="center">
  <label for="resolution">Resolution:</label>
  <p>
    {{input 
      id="resolution"
      type="range" 
      min=1
      max=10 
      value=this.precision.blockSize 
      change=(action "onPrecisionChange" this.precision.blockSize)
    }}
  </p>
  <label for="precision">Precision:</label>
  <p>
    {{input 
      id="precision"
      type="range" 
      min=1 
      max=400
      value=this.precision.permissiveness 
      change=(action "onPrecisionChange" this.precision.permissiveness)
    }}
  </p>
</div>
{{yield}}